{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true, // Don't infer 'any' type
    "noImplicitThis": true, // Don't infer 'this' type
    "strict": false, //disable strict type checking
    // "noUnusedLocals": false, // Disable checking unused locals
    // "noUnusedParameters": false, // Disable checking unused parameters
    
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/lib/placeholder-data.js",
    "scripts/seed.js"
, "app/GroupContext.js", "app/lib/encryption.tsx", "app/dashboard/customers/page.js"  ],
  "exclude": [
    "node_modules",
    "app/dashboard/customers/page.ts"
  ]
}
